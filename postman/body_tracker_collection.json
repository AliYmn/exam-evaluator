{
    "info": {
        "name": "Body Tracker API",
        "description": "Collection for testing the body tracker API endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "{{baseUrl}}",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Create Body Tracker",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "{{accessToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/tracker",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "tracker"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"weight\": 75.5,\n    \"neck\": 38.2,\n    \"waist\": 82.3,\n    \"shoulder\": 110.5,\n    \"chest\": 95.8,\n    \"hip\": 90.2,\n    \"thigh\": 58.6,\n    \"arm\": 35.4,\n    \"notes\": \"Monthly measurement\"\n}"
                },
                "description": "Create a new body tracker record for the authenticated user"
            },
            "response": []
        },
        {
            "name": "Get Body Tracker",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "{{accessToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/tracker/1",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "tracker",
                        "1"
                    ]
                },
                "description": "Get a specific body tracker record by ID"
            },
            "response": []
        },
        {
            "name": "List Body Trackers",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "{{accessToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/tracker?skip=0&limit=100",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "tracker"
                    ],
                    "query": [
                        {
                            "key": "skip",
                            "value": "0"
                        },
                        {
                            "key": "limit",
                            "value": "100"
                        }
                    ]
                },
                "description": "List all body tracker records for the authenticated user with pagination"
            },
            "response": []
        },
        {
            "name": "Update Body Tracker",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "{{accessToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/tracker/1",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "tracker",
                        "1"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"weight\": 74.8,\n    \"waist\": 81.5,\n    \"chest\": 96.2,\n    \"notes\": \"Updated measurements after 2 weeks\"\n}"
                },
                "description": "Update a specific body tracker record"
            },
            "response": []
        },
        {
            "name": "Delete Body Tracker",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "{{accessToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/tracker/1",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "tracker",
                        "1"
                    ]
                },
                "description": "Delete a specific body tracker record"
            },
            "response": []
        }
    ]
}
