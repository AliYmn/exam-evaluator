{
    "info": {
        "name": "Workout Tracker API",
        "description": "Collection for testing the workout tracker endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "{{baseUrl}}",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Create Workout Tracker Record",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "if (jsonData.id) {",
                            "    pm.environment.set('workoutTrackerId', jsonData.id);",
                            "    console.log('Workout Tracker ID saved to environment: ' + jsonData.id);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/workout-tracker",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "workout-tracker"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Monday Upper Body Routine\",\n    \"workout_id\": 1,\n    \"is_completed\": false,\n    \"duration_minutes\": 45,\n    \"calories_burned\": 350,\n    \"sets\": 3,\n    \"reps\": 12,\n    \"notes\": \"Focus on form and controlled movements\",\n    \"custom_data\": {\n        \"difficulty_level\": \"intermediate\",\n        \"equipment\": [\"dumbbells\", \"bench\", \"resistance bands\"],\n        \"target_muscles\": [\"chest\", \"shoulders\", \"triceps\"]\n    }\n}"
                },
                "description": "Create a new workout tracker record"
            },
            "response": []
        },
        {
            "name": "Get Workout Tracker Record",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/workout-tracker/{{workoutTrackerId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "workout-tracker",
                        "{{workoutTrackerId}}"
                    ]
                },
                "description": "Get a specific workout tracker record by ID"
            },
            "response": []
        },
        {
            "name": "List Workout Tracker Records",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/workout-tracker?skip=0&limit=10",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "workout-tracker"
                    ],
                    "query": [
                        {
                            "key": "skip",
                            "value": "0"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        }
                    ]
                },
                "description": "List all workout tracker records with pagination"
            },
            "response": []
        },
        {
            "name": "Get Latest Workout Tracker Record",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/workout-tracker/latest",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "workout-tracker",
                        "latest"
                    ]
                },
                "description": "Get the latest workout tracker record"
            },
            "response": []
        },
        {
            "name": "Update Workout Tracker Record",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/workout-tracker/{{workoutTrackerId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "workout-tracker",
                        "{{workoutTrackerId}}"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Monday Upper Body Routine\",\n    \"is_completed\": true,\n    \"duration_minutes\": 50,\n    \"calories_burned\": 380,\n    \"sets\": 4,\n    \"reps\": 10,\n    \"notes\": \"Increased weight on bench press, felt good\",\n    \"custom_data\": {\n        \"difficulty_level\": \"intermediate\",\n        \"equipment\": [\"dumbbells\", \"bench\", \"resistance bands\"],\n        \"target_muscles\": [\"chest\", \"shoulders\", \"triceps\"],\n        \"personal_record\": true\n    }\n}"
                },
                "description": "Update a workout tracker record"
            },
            "response": []
        },
        {
            "name": "Delete Workout Tracker Record",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/workout-tracker/{{workoutTrackerId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "workout-tracker",
                        "{{workoutTrackerId}}"
                    ]
                },
                "description": "Delete a workout tracker record"
            },
            "response": []
        }
    ]
}
