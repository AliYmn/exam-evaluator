{
    "info": {
        "name": "Tracker API",
        "description": "Collection for testing the tracker endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "{{baseUrl}}",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Create Tracker Record",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "if (jsonData.id) {",
                            "    pm.environment.set('trackerId', jsonData.id);",
                            "    console.log('Tracker ID saved to environment: ' + jsonData.id);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/tracker",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "tracker"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"data\": {\n        \"weight\": 75.5,\n        \"height\": 180,\n        \"bodyFat\": 18.2,\n        \"bmi\": 23.3,\n        \"steps\": 8500,\n        \"sleepHours\": 7.5,\n        \"waterIntake\": 2200,\n        \"bloodPressure\": {\n            \"systolic\": 120,\n            \"diastolic\": 80\n        },\n        \"heartRate\": 68,\n        \"date\": \"2023-06-15\",\n        \"notes\": \"Feeling good today, moderate activity level\"\n    }\n}"
                },
                "description": "Create a new tracker record"
            },
            "response": []
        },
        {
            "name": "Get Tracker Record",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/tracker/{{trackerId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "tracker",
                        "{{trackerId}}"
                    ]
                },
                "description": "Get a specific tracker record by ID"
            },
            "response": []
        },
        {
            "name": "List Tracker Records",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/tracker?skip=0&limit=10",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "tracker"
                    ],
                    "query": [
                        {
                            "key": "skip",
                            "value": "0"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        }
                    ]
                },
                "description": "List all tracker records with pagination"
            },
            "response": []
        },
        {
            "name": "Update Tracker Record",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/tracker/{{trackerId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "tracker",
                        "{{trackerId}}"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"data\": {\n        \"weight\": 75.2,\n        \"height\": 180,\n        \"bodyFat\": 18.0,\n        \"bmi\": 23.2,\n        \"steps\": 10200,\n        \"sleepHours\": 8.0,\n        \"waterIntake\": 2500,\n        \"bloodPressure\": {\n            \"systolic\": 118,\n            \"diastolic\": 78\n        },\n        \"heartRate\": 66,\n        \"date\": \"2023-06-15\",\n        \"notes\": \"Feeling great, increased step count and improved sleep\"\n    }\n}"
                },
                "description": "Update a tracker record"
            },
            "response": []
        },
        {
            "name": "Delete Tracker Record",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{accessToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/tracker/{{trackerId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "tracker",
                        "{{trackerId}}"
                    ]
                },
                "description": "Delete a tracker record"
            },
            "response": []
        }
    ]
}
